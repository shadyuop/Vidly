@model VidlyT.Models.Movie
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.GenreName</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.AddedDate.ToShortDateString()</li>
    <li>Number in Stock: @Model.Stock</li>
</ul>

